<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sobre.AppSobreActivity">

    <ImageView
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        style="@style/AppTema.AppFrame" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/lblAppName"
        android:text="Sistema Automatizado\nde Captação de Água\nda Chuva para Reutilização"
        android:layout_marginTop="27dp"
        android:textSize="20dp"
        android:textColor="#8B8989"
        android:textStyle="bold"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignStart="@+id/lblSobreRodape"
        android:layout_marginLeft="-20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/versao"
        android:id="@+id/lblVersao"
        android:layout_below="@+id/lblAppName"
        android:layout_centerHorizontal="true"
        android:textColor="#8B8989"
        android:textStyle="italic" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imgSobre"
        android:nestedScrollingEnabled="false"
        android:layout_below="@id/lblVersao"
        android:layout_above="@+id/lblSobreRodape"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:elevation="0dp"
        android:src="@mipmap/ic_logotipo" />

    <TextView
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="© 2016-2016 FATEC CPB"
        android:id="@+id/lblSobreRodape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:textColor="#8B8989" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="http://www.fateccarapicuiba.edu.br/"
        android:id="@+id/lblLink"
        android:textColor="#8B8989"
        android:layout_marginBottom="18dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:autoLink="web"/>

</RelativeLayout>